#!/usr/bin/env bash

usage="USAGE ./$(basename $0) <git email>"

make_file="Makefile"
make_file_in="Makefile.in"

git_config_file="gitconfig"
git_config_file_in="gitconfig.in"

git_email="$1"

if [ -z "$git_email" ]; then echo "$usage"; exit 1; fi

sed "s/\$email/$git_email/" $git_config_file_in > $git_config_file

cp $make_file_in $make_file
